# For node
resource "aws_security_group" "client" {
  name        = "client"
  description = "Allow SSH inbound traffic for client node"
  #vpc_id      = module.vpc.vpc_id
  vpc_id      = data.aws_vpc.default_vpc.id

  ingress {
    description = "SSH"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

